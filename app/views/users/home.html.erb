<h1>ここUserのHOME画面です</h1>
<header>
  <% if user_signed_in? %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    <%= link_to 'アカウント', user_profile_path(current_user) %>
    <%= link_to '投稿一覧', posts_path %>
    <%= link_to 'お気に入り一覧', users_favorite_path %>
  <% else %>
    <%= link_to 'ログイン', new_user_session_path %>
    <%= link_to '新規登録', new_user_registration_path%>
  <% end %>
</header>

<section class="hero is-warning is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-full">
          <p class="title">新着投稿</p>
          <div class="box">
            <% @posts.each do |post| %>
              <table class="table is-hoverable is-fullwidth">
                <tbody class="is-full">
                  <tr>
                    <td>
                      <%= link_to(post_path(post)) do %>
                          <%= image_tag post.product_img_url, width: '40%', height: '60%' %>
                      <% end %>
                    </td>
                    <td><%= post.product_introduction %></td>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>
          <div class="has-name column is-8 is-offset-2">
            <%= link_to 'もっと見る!!', posts_path, class:"button is-fullwidth" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


