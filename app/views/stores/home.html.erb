<h1>ここはStoreのHOME画面です</h1>

<% if store_signed_in? %>

    <%= link_to 'ログアウト', destroy_store_session_path, method: :delete %>
    <%= link_to 'アカウント', store_profile_path(current_store) %>
    <%= link_to '新規投稿', new_post_path(current_store) %>
    <%= link_to '投稿一覧', posts_path(current_store) %>

<% else %>

    <%= link_to 'ログイン', new_store_session_path %>
    <%= link_to '新規登録', new_store_registration_path%>
    
<% end %>

<% @store.posts.each do |post| %>

    <tr>
      <td>
        <%= link_to(post_path(post)) do %>
          <%= image_tag post.product_img_url, width: '20%', height: '10%'%>
        <% end %>
      </td>
      <td><%= post.product_introduction %></td>
  </tr>

<% end %>
