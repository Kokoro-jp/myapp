<section class="hero is-warning is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-mobile is-centered">
        <div class="is-5-tablet is-4-desktop is-3-widescreen">
          <h1 class="subtitle has-text-centered">売り切り商品をアピールしましょう!!</h1>
          <div class="box">
            <%= link_to "アピールする!!", new_post_path(current_store), class:"button is-warning is-rounded is-hovered is-fullwidth is-centered my-4"%>
          </div>
          <p class="title">閲覧数の多い投稿</p>
          <% if @posts.present? %>
            <div class="box">
              <% @posts.first(5).each do |post| %>
                <table class="table is-fullwidth">
                  <tbody>
                    <tr>
                      <td class="is-centered post-td">
                        <%= link_to(post_path(post)) do %>
                          <%= image_tag post.product_img.url, width: '40%', height: 'auto', class:"img" %>
                        <% end %>
                        <div class="has-text-centered impressions-count">
                          <div class="column is-centered">
                            <p class="is-centered">閲覧数<span class="ml-3"><%= post.impressions_count %></span></p>
                          </div>
                        </div>
                      </td>
                      <td class="post-td">
                        <div class="has-text-centered mt-5">
                          <%= post.product_introduction %>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              <% end %>
            </div>
          <% else %>
            <h3 class="has-text-centered mb-5">まだ投稿がされていません。</h3>
          <% end %>
          <div class="has-name column is-8 is-offset-2">
            <%= link_to '過去の投稿一覧へ', posts_path, class:"button is-fullwidth" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
