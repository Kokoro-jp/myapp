<h1>ここはStoreのHOME画面です</h1>

<header>
  <% if store_signed_in? %>
    <div>
      <%= link_to 'ログアウト', destroy_store_session_path, method: :delete %>
      <%= link_to 'アカウント', store_profile_path(current_store) %>
      <%= link_to '新規投稿', new_post_path(current_store) %>
      <%= link_to '投稿一覧', posts_path(current_store) %>
    </div>
  <% else %>
    <%= link_to 'ログイン', new_store_session_path %>
    <%= link_to '新規登録', new_store_registration_path%>
  <% end %>
</header>

<section class="hero is-warning is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-full">
          <p class="title">過去の投稿</p>
          <div class="box">
            <% @store.posts.each do |post| %>
              <table class="table is-hoverable is-fullwidth">
                <tbody>
                  <tr class="block">
                    <td>
                      <%= link_to(post_path(post)) do %>
                        <%= image_tag post.product_img_url, width: '40%', height: '60%'%>
                      <% end %>
                    </td>
                    <td><%= post.product_introduction %></td>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>


