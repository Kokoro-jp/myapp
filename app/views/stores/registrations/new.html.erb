<h2>新規登録（店舗）</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "stores/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :store_name %><br />
    <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name" %>
  </div>
  <div class="field">
    <%= f.label :store_address %><br />
    <%= f.text_field :store_address, autofocus: true, autocomplete: "store_address" %>
  </div>
  <div class="field">
    <%= f.label :business_hours %><br />
    <%= f.text_field :business_hours, autofocus: true, autocomplete: "business_hours" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "stores/shared/links" %>
<p>お得商品を見つけたい個人利用の方は<%= link_to "こちら", new_user_registration_path %></p>
