<section class="hero is-warning is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <h2 class="title">新規登録（店舗）</h2>
          <div class="box">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "stores/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :store_name, class:"label" %>
                <div class="control has-icons-left">
                  <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name", class:"input mb-4", placeholder:"offlyerストア 東京駅前店" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-store"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :store_address, class:"label" %>
                <div class="control has-icons-left">
                  <%= f.text_field :store_address, autofocus: true, autocomplete: "store_address", class:"input mb-4", placeholder:"東京都千代田区丸の内一丁目 offlyerビル1階" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-map-pin"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :business_hours, class:"label" %>
                <div class="control has-icons-left">
                  <%= f.text_field :business_hours, autofocus: true, autocomplete: "business_hours", class:"input mb-4", placeholder:"平日9:00 ~ 23:00, 土日祝8:00 ~ 23:00" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-business-time"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :email, class:"label" %>
                <div class="control has-icons-left">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input mb-4", placeholder:"offlyer@gmail.com" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :password, class:"label" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
                <% end %><br />
                <div class="control has-icons-left">
                  <%= f.password_field :password, autocomplete: "new-password", class:"input mb-4", placeholder:"******" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-key"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :password_confirmation, class:"label" %>
                <div class="control has-icons-left">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input mb-4", placeholder:"******" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
              </div>
              <div class="actions field">
                <%= f.submit "新規登録", class:"button is-outlined is-hovered is-warning" %>
              </div>
            <% end %>
            <div class="block mt-5">
              <%= render "stores/shared/links" %>
              <p>お得商品を見つけたい個人利用の方は<%= link_to "こちら", new_user_registration_path, class:"has-text-link" %></p>
            </div>
          </div>
          </div>
      </div>
    </div>
  </div>
</section>
